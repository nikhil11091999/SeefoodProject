<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tensorflow.lite.examples.classification">

    <uses-sdk />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/activity_name_classification"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DisplayDhoklaActivity"
            android:label="@string/title_activity_display_dhokla"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".DisplayVadaPavActivity"
            android:label="@string/title_activity_display_vada_pav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayMeduVadaActivity"
            android:label="@string/title_activity_display_medu_vada"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplaySamosaActivity"
            android:label="@string/title_activity_display_samosa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayPizzaActivity"
            android:label="@string/title_activity_display_pizza"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClassifierActivity"
            android:label="@string/activity_name_classification"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>